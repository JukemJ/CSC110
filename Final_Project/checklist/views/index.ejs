<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Final Project Checklist</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


</head>
<body class="container">
    <header class="row text-center border-bottom mt-3">
        <div class="col">
            <h1>Final Project Checklist</h1>
            
        </div>
    </header>

    <div class="row mt-3">
        <div class="col text-center space-between">
            <h2>Todo List</h2>

            <ul class="list-group task-list" id="checklist">
                <% db.tasks.forEach(task => { %>
                    <div class="tasks row justify-content-around my-2 border-bottom pb-2">
                        <% if (task.completed) { %>
                            <button class="completeButton btn btn-success col-2">Completed</button>
                        <% } else { %>
                            <button class="completeButton btn btn-warning col-2">Incomplete</button>
                        <% } %>
                        <button class="deleteButton btn btn-danger col-1">X</button>
                        <span class="task-text col-8 <%= task.completed ? "text-decoration-line-through" : "" %>"><%= task.text %></span>
                    </div>
                <% }) %>
            </ul>

        </div>

        <div class="col">
            <h2>Add a Task</h2>
            <input type="text" id="newTaskText" class="form-control" placeholder="Enter a task" name="task">
            <button class="btn btn-primary mt-3" id="addTaskButton" type="submit">Add Task</button>
        </div>
    </div>






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="script.js"></script>
</body>
</html>